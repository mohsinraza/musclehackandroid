<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/mainLayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginRight="4dp"
		>
		<RelativeLayout
			android:id="@+id/topLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginBottom="5dp"
			>
			<TextView
				android:id="@+id/exerciseNumber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:paddingTop="5dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:textColor="#000000"
				/>
			<TextView
				android:id="@+id/exerciseName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="24sp"
				android:textColor="#0B0A32"
				android:layout_marginLeft="8dp"
				android:layout_toRightOf="@id/exerciseNumber"
				/>
			<TextView
				android:id="@+id/range"
				android:textSize="14sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/exerciseName"
				android:layout_alignLeft="@id/exerciseName"
				/>
			<TextView
				android:id="@+id/exerciseId"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:visibility="gone"
				/>
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			<TableLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="16dp"
				android:id="@+id/tableLayout"
				>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					>
					<TextView
						android:layout_gravity="center_vertical|right"
						android:textSize="18sp"
						android:text="@string/weight"
						android:textColor="#000000"
						android:paddingRight="8dp"
						android:layout_width="fill_parent"
					/>
					
					<EditText
						android:id="@+id/weight"
						android:layout_gravity="center_vertical"
						android:inputType="numberDecimal"
						android:selectAllOnFocus="true"
						android:paddingRight="5dp"
						android:layout_marginRight="8dp"
						android:layout_width="fill_parent"
					/>
					
					<TextView
						android:layout_gravity="center_vertical"
						android:textSize="17sp"
						android:text="@string/previous"
						android:textColor="#73182C"
						android:paddingRight="5dp"
						android:layout_width="fill_parent"
						/>
					<TextView
						android:id="@+id/previousWeight"
						android:layout_gravity="center_vertical"
						android:textSize="17sp"
						android:textColor="#682003"
						android:textAlignment="center"
						android:textIsSelectable="false"
						android:layout_width="fill_parent"
					/>
				</TableRow>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					>
					<TextView
						android:layout_gravity="center_vertical|right"
						android:textSize="18sp"
						android:text="@string/reps"
						android:textColor="#000000"
						android:paddingRight="8dp"
						android:layout_width="fill_parent"
					/>
					
					<EditText
						android:id="@+id/nreps"
						android:layout_gravity="center_vertical"
						android:inputType="numberSigned"
						android:selectAllOnFocus="true"
						android:paddingRight="5dp"
						android:layout_marginRight="8dp"
						android:layout_width="fill_parent"
					/>
					
					<TextView
						android:layout_gravity="center_vertical"
						android:textSize="17sp"
						android:text="@string/previous"
						android:textColor="#73182C"
						android:paddingRight="5dp"
						android:layout_width="fill_parent"
						/>
					<TextView
						android:id="@+id/previousNreps"
						android:textSize="17sp"
						android:layout_gravity="center_vertical"
						android:textColor="#73182C"
						android:textAlignment="center"
						android:textIsSelectable="false"
						android:layout_width="fill_parent"
					/>
		
				</TableRow>
				<TableRow
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					>
					<TextView
						android:layout_gravity="center_vertical|right"
						android:textSize="18sp"
						android:text="@string/rest"
						android:textColor="#000000"
						android:paddingRight="8dp"
						android:layout_width="fill_parent"
					/>
					
					<EditText
						android:id="@+id/rest"
						android:layout_gravity="center_vertical"
						android:inputType="numberSigned"
						android:selectAllOnFocus="true"
						android:paddingRight="5dp"
						android:layout_marginRight="8dp"
						android:layout_width="fill_parent"
					 />
					
					
					<TextView
						android:layout_gravity="center_vertical"
						android:textSize="17sp"
						android:text="@string/previous"
						android:textColor="#73182C"
						android:paddingRight="5dp"
						android:layout_width="fill_parent"
						/>
					<TextView
						android:id="@+id/previousRest"
						android:textSize="17sp"
						android:layout_gravity="center_vertical"
						android:textColor="#73182C"
						android:textAlignment="center"
						android:textIsSelectable="false"
						android:layout_width="fill_parent"
					/>
				</TableRow>
	
			</TableLayout>

			
			
			<ImageButton
				android:id="@+id/buttonRest"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="24dp"
				android:layout_marginTop="12dp"
				android:src="@drawable/timer"
				android:contentDescription="@string/rest"
				android:paddingRight="5dp"
				android:layout_toRightOf="@id/tableLayout"
				android:layout_centerVertical="true"
				/>

		</RelativeLayout>
	</LinearLayout>
