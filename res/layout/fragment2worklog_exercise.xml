<?xml version="1.0" encoding="utf-8"?>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLayout"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	
		<TextView
		android:id="@+id/exerciseNumber"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:paddingLeft="6dip"
		android:paddingRight="6dip"
		android:textColor="#000000"
		android:layout_centerVertical="true"
		 />


		<LinearLayout
		android:id="@+id/topLayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_toRightOf="@id/exerciseNumber"
		>
	
			<LinearLayout
			android:id="@+id/firstLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:weightSum="1.0"
			android:orientation="horizontal"
			>
	
				<TextView
					android:id="@+id/exerciseName"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.70"
					android:textSize="16sp"
					android:textColor="#0B0A32"
					/>
				<TextView
					android:id="@+id/exerciseId"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.70"
					android:textSize="16sp"
					android:visibility="gone"
					/>
				<TextView
					android:id="@+id/range"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.30"
					android:textSize="12sp"
					/>
				
			</LinearLayout>
			<LinearLayout
			android:id="@+id/secondLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:weightSum="1.0"
			android:orientation="horizontal"
			>
				
				<!-- 
				  <TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.10"
					android:textSize="12sp"
					android:layout_marginLeft="4dp"
					android:text="Rest:"
				/>
				-->

			
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.14"
					android:textSize="12sp"
					android:text="@string/weight"
					android:textColor="#000000"
					android:layout_marginLeft="4dp"
				/>
				
				<EditText
					android:id="@+id/weight"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:inputType="numberDecimal"
					android:layout_weight="0.22"
				/>
	
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.10"
					android:textSize="12sp"
					android:layout_marginLeft="4dp"
					android:text="@string/reps"
                    android:textColor="#000000"
				/>
				
				<EditText
					android:id="@+id/nreps"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:inputType="numberSigned"
					android:layout_weight="0.17"
				/>
	
				<Button
					android:id="@+id/buttonRest"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.20"
					android:text="@string/rest"
					android:textSize="12sp"
					android:layout_marginLeft="4dp"
					/>
				
				<EditText
					android:id="@+id/rest"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:inputType="numberSigned"
					android:layout_weight="0.17"
				 />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/secondLayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:weightSum="1.0"
			android:orientation="horizontal"
			>
				

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.20"
					android:textSize="12sp"
					android:layout_marginLeft="12dp"
					android:text="@string/previous"
                    android:textColor="#73182C"
					android:layout_marginRight="20dp"
				/>

				
				<TextView
					android:id="@+id/previousRest"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.17"
					android:textColor="#682003"
					android:textAlignment="center"
                    android:textIsSelectable="false"
				/>
			
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.14"
					android:textSize="12sp"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="20dp"
				/>
				  
				<TextView
					android:id="@+id/previousWeight"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.22"
                    android:textColor="#73182C"
					android:textAlignment="center"
                    android:textIsSelectable="false"
				/>
	
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.10"
					android:textSize="12sp"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="20dp"
				/>
				  
				<TextView
					android:id="@+id/previousNreps"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.17"
                    android:textColor="#73182C"
					android:textAlignment="center"
					android:textIsSelectable="false"
				/>
	
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
 