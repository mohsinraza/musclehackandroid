<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/textViewSetNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewSetNumber"
        android:layout_below="@+id/textViewSetNumber"
        android:layout_marginTop="6dp"
        android:text="Name"
        android:textSize="18sp"
        />
    
    <TextView
        android:id="@+id/textViewPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/editTextExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="64dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:layout_marginRight="20dp"
        >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/editTextExerciseName"
        android:layout_marginTop="12dp"
        android:text="Rest time"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextRestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextExerciseName"
        android:layout_alignTop="@+id/textView2"
        android:ems="10"
        android:layout_marginRight="20dp"
        />
    
        <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/editTextRestTime"
        android:layout_marginTop="12dp"
        android:text="Rep range"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextRepRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextRestTime"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/buttonAddUnder"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextRepRange"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"
        android:text="Add under" />

    
    
    <Button
        android:id="@+id/buttonDrop"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonAddUnder"
        android:layout_toRightOf="@+id/buttonAddUnder"
        android:text="Drop"
        android:layout_marginLeft="14dp"
        />
    
    <Button
        android:id="@+id/buttonSave"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonDrop"
        android:layout_toRightOf="@+id/buttonDrop"
        android:text="Save"
        android:layout_marginLeft="14dp"
        />

    	<LinearLayout
		    android:focusable="true"
               android:focusableInTouchMode="true"
               android:layout_width="0px"
               android:layout_height="0px"
               >
			<EditText
				android:id="@+id/hidenForFocus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
		</LinearLayout>
</RelativeLayout>
